{
  "manifest_version": 3,
  "name": "CanvasFlow: AI Assistant for Canvas LMS",
  "version": "1.0.0",
  "description": "Smart Canvas companion with AI insights, assignment tracking, and weekly schedule generation for better studying.",
  "homepage_url": "https://github.com/jonasneves/canvasflow",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.edu/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.edu/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_title": "CanvasFlow - Canvas Dashboard"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon-48.png"],
      "matches": [
        "*://*.edu/*"
      ]
    }
  ]
}
