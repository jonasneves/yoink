{
  "manifest_version": 3,
  "name": "Canvas MCP Server",
  "version": "1.0.0",
  "description": "MCP Server for Canvas LMS with Native Messaging support",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting",
    "nativeMessaging",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.instructure.com/*",
      "*://*.canvaslms.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_title": "Canvas MCP Server"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
